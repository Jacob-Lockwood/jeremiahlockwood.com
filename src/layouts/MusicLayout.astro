---
import MainLayout from "./MainLayout.astro"
import type { musicFrontmatter } from "src/lib/utils"
const { image, title } = Astro.props.frontmatter as musicFrontmatter
---

<MainLayout title={`${title} | Jeremiah Lockwood`} active="music">
  <header>
    <h1>{title}</h1>
    <img src={image} alt={title} />
  </header>
  <main class="post">
    <slot />
  </main>
</MainLayout>

<style>
  main,
  header {
    margin: 0 auto;
    padding: 2em 1em;
  }
  header {
    width: 70vw;
    text-align: center;
  }
  header img {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-height: 800px;
  }
  main {
    width: max(200px, 70vw);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    line-height: 1.6em;
    font-size: 1.3em;
  }
  main :global(p, blockquote) {
    width: 70ch;
    margin: 0 auto;
  }
  main :global(img) {
    width: 100%;
    height: auto;
  }
  @media screen and (max-width: 700px) {
    main {
      font-size: 0.8em;
    }
  }
</style>
<style is:global>
  figure {
    text-align: center;
  }

  blockquote {
    border-left: 5px solid;
    padding: 0.5em;
  }
  audio {
    display: block;
  }
  figure audio {
    margin: 0 auto;
  }
</style>
