---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
export async function getStaticPaths() {
  const musicEntries = await getCollection("music");
  return musicEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { title, image } = entry.data;
const { Content } = await entry.render();
---

<MainLayout title={`${title} | Jeremiah Lockwood`} active="music">
  <header>
    <h1>{title}</h1>
    <img src={image} alt={title} />
  </header>
  <main class="post">
    <Content />
  </main>
</MainLayout>

<style>
  main,
  header {
    margin: 0 auto;
    padding: 2em 1em;
  }
  header {
    width: 70vw;
    text-align: center;
  }
  header img {
    width: 100%;
    height: auto;
    object-fit: contain;
    max-height: 800px;
  }
  main {
    width: max(200px, 90vw);
    display: flex;
    flex-direction: column;
    gap: 2rem;
    line-height: 1.6em;
    font-size: 1.3em;
  }
  @media screen and (max-width: 700px) {
    main {
      font-size: 1.1em;
    }
  }
</style>
<style is:global>
  figure {
    text-align: center;
  }

  blockquote {
    border-left: 4px solid hsla(0, 0%, 0%, 0.1);
    padding: 0.5em;
  }
  audio {
    display: block;
  }
  figure audio {
    margin: 0 auto;
  }
  figure iframe {
    width: min(90vw, 800px) !important;
  }
  main > * {
    margin: 0 auto;
  }
  main :is(p, blockquote, ul) {
    max-width: 70ch;
  }
  main img {
    width: 100%;
    height: auto;
  }
  main iframe:not(.bandcamp) {
    height: 40vw;
    width: min(90%, 800px);
    margin: 0 auto;
  }
</style>
