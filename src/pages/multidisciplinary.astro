---
import Layout from "../layouts/MainLayout.astro"
import Modal from "../components/ImageModal.svelte"

import gosAccImage from "../assets/images/The Gospel According to Carolina Slim annotated set list.JPG?url"
const bibUFOImages = await Promise.all(
  Object.values(
    import.meta.glob("../assets/images/Biblical_UFO_Abduction_in_the_Catskills/*", {
      as: "url",
    })
  ).map(imp => imp())
)
const canDiaImages = await Promise.all(
  Object.values(
    import.meta.glob("../assets/images/cantorial-diagrams/*", { as: "url" })
  ).map(imp => imp())
)
---

<Layout
  title="Multidisciplinary Work | Jeremiah Lockwood"
  active="multidisciplinary work"
>
  <main>
    <h1>Multidisciplinary Work</h1>

    <section>
      <Modal
        images={bibUFOImages}
        title="Biblical UFO Abduction in the Catskills"
        client:load
      />
      <Modal
        images={[gosAccImage]}
        title="The Gospel According to Carolina Slim"
        client:load
      />
      <Modal images={canDiaImages} title="Cantorial Diagrams" client:load />
    </section>

    <aside>
      <p>â€¦And more soon</p>
    </aside>
  </main>
</Layout>

<style>
  h1 {
    text-align: center;
  }

  section {
    overflow-y: scroll;
    display: flex;
    flex-wrap: wrap;
    gap: 2em;
    justify-content: center;
  }

  .preview-title {
    position: absolute;
    bottom: 0;
    margin-bottom: 0;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    display: block;
    text-align: center;
    width: 110%;
    padding: 0.5em;
  }

  aside p {
    text-align: center;
    padding: 1em;
    font-size: 3em;
  }

  img {
    height: 100%;
    object-fit: cover;
  }

  img.content {
    height: fit-content;
    width: 100%;
  }

  h3 {
    position: absolute;
    bottom: 0;
    margin-bottom: 0;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    display: block;
    text-align: center;
    width: 100%;
    padding: 0.5em;
  }
</style>
